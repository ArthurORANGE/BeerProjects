@model ProjetMvcBeer.Models.Devis

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ListeLigneDeVieDevis)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Nom de la bière</th>
                    <th>Quantité</th>
                </tr>
                @foreach (var item in Model.ListeLigneDeVieDevis)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Beer.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                    </tr>
                }
            </table>
        </dd>

         <dt class="col-sm-2">
            Prix total du devis :
        </dt>
        <dd class="col-sm-10">
            @Model.calculTotalPrice() €

        </dd>


    </dl>
</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editer</a> |
    <a asp-action="Index">Retour</a>
</div>